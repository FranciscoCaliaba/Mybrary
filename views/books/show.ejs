<h2 class="page-header"><%= book.title %></h2>
<div class="book-details">

    <div>
        <!-- Imagen -->
        <img class="book-cover" src="<%= book.coverImagePath %>">

        <!-- 3 Botones -->
        <div class="book-details-btn-grid">
            <a class="btn btn-primary" href="/books/<%= book.id %>/edit ">Editar</a>
            <%- include("../partials/deleteForm", {url:`/books/${book.id}`}) %>
            <a class="btn btn-primary book-details-author-button" href="/authors/<%= book.author.id %>">Ver Autor</a>
        </div>
    </div>

    <!-- Datos del Libro -->
    <div class="book-details-grid">

        <div class="book-details-label">Author:</div>
        <div><%= book.author.name %></div>

        <div class="book-details-label">Fecha de Publicacion:</div>
        <div><%= book.publishDate.toDateString() %></div>

        <div class="book-details-label">Numero de Paginas:</div>
        <div><%= book.pageCount %></div>

        <div class="book-details-label">Descripci√≥n:</div>
        <div><%= book.description %></div>

    </div>
</div>